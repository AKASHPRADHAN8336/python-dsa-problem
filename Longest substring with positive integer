class Solution:
    def longestSubarray(self, arr, k):  
        # code here
        
        
        left=0
        right=0
        sum=0
        max_len=0
        
        n=len(arr)
        
        while(right<n):
            
            sum+=arr[right]
             
            while(left<=right and sum>k):
                 sum-=arr[left]
                 left+=1
                 
             
            if sum==k:
                max_len=max(max_len,right-left+1)
             
             
            
            right+=1
            
            
            
            
        return max_len
